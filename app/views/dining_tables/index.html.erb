<h1>Listing Dining Tables</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dining_tables.each do |dining_table| %>
      <tr>
        <td><%= dining_table.customer_id %></td>
        <td><%= link_to 'Show', dining_table %></td>
        <td><%= link_to 'Edit', edit_dining_table_path(dining_table) %></td>
        <td><%= link_to 'Destroy', dining_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

